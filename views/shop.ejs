<% include shared/header %>

<h1>Buzz Ads - Products</h1>


<div class="row">
    <% for(let i = 0; i < products.length; i++) { %>
      <div class="col-lg-3 col-sm-4 col-12">
        <div class="card">
            <img src="https://dummyimage.com/350x200/5a5a5a/fff" alt="Card image cap" width="100%" height="200px">
            <label class="text-light">Product Image</label>
            <div class="card-block">
              <h4><%= products[i].ProductName %> <span class="text-danger" style="float:right;">$ <%= products[i].Price %></span></h4>
              
              <p></p>
              <button type="button" style="float:right;" class="btn btn-warning text-light">Buy</button>
            </div>
        </div>
      </div>
    <% } %>
</div>

<% include shared/footer %>